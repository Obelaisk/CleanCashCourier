{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "routes": [
    {
      "route": "/",
      "serve": "/index.html"
    },
    {
      "route": "/about",
      "serve": "/index.html"
    },
    {
      "route": "/registro",
      "serve": "/index.html"
    },
    {
      "route": "/login",
      "serve": "/index.html"
    },
    {
      "route": "/send-money",
      "serve": "/index.html"
    },
    {
      "route": "/transaction-history",
      "serve": "/index.html"
    },
    {
      "route": "/profile",
      "serve": "/index.html"
    },
    {
      "route": "/welcome",
      "serve": "/index.html"
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  }
}
